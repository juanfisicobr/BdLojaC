
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Manufacturers {
  COD_FABRICANTE             String       @id 
  NOME_FABRICANTE            String 

  productss Products[] 

}

model Products {
  Code              Int       @id 
  NOME_PRODUTO      String
  Price             Decimal   @db.Decimal(10, 2)

  fk_Manufacturers_Code   Manufacturers @relation(fields: [Manufacturer], references: [COD_FABRICANTE])
  Manufacturer      String 
}

model funcionarios {
  COD_VENDEDOR             Int       @id
  Nome_Completo            String

  relatorios relatorio[]

}

model VENDAONLINE {
  ID             String       @id
  LOJA           String

  relatorioLs relatorioL[]
 
}

model relatorioL {
  DATA_VENDA             DateTime      
  NUM_NF                 Int @id
  COD_PRODUTO            Int
  COD_LOJA               String
  CANAL_VENDAS           String

  fk_relatoriol_Code   VENDAONLINE @relation(fields: [COD_LOJA], references: [ID]) 

}

model relatorio {
  DATA_VENDA             DateTime      
  NUM_NF                 Int @id
  COD_PRODUTO            Int
  COD_VENDEDOR           Int
  CANAL_VENDAS           String

  fk_funcionarios_Code   funcionarios @relation(fields: [COD_VENDEDOR], references: [COD_VENDEDOR]) 

}
